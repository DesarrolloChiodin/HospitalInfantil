        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <WrapPanel>
                            <TextBlock Text="Guardar" VerticalAlignment="Center" Width="49" />
                            <Image Source="Images\onebit_11.png" />
                        </WrapPanel>
